{
  "bail": 1,
  "verbose": true,
  "clearMocks": true,
  "collectCoverageFrom": [
    "**/*.{js,jsx}",
    "!**/www/node-server.js",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageReporters": ["text"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  }
}
